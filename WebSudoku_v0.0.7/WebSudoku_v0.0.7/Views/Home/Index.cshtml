@{
	ViewData["Title"] = "Sudoku Solver";
}
<div>
	<h1>Welcome to the @ViewData["Title"]</h1>

	<div class="boardSelection">
		<select name="puzzle" id="puzzleSelect">
			<!--Sudoku puzzle list selection is generated here via javascript-->
		</select>
	</div>

	<div class="buttonPanel">
		<button type="button" id="addNew" class="btn btn-outline-secondary" onclick="toggleNewPuzzleDisplay();">Add New...</button>
		<button type="button" id="deletePuzzle" class="btn btn-outline-secondary" onclick="deleteSelectedPuzzle();">Delete Selected</button>
		<br /><br />
		<div id="addToggle" style="display:none;">
			<button for="puzzle" type="submit" class="btn btn-secondary" onclick="prepareAddNewPuzzle();">Add New Puzzle</button>
			<input type="text" id="newPuzzleInput" name="puzzle" placeholder="Enter a new puzzle here..."><br /><br />
		</div>
		<br /><br />
		<button type="button" class="btn btn-primary" onclick="activateGameSolution();">Show Solution</button>
		<button type="button" class="btn btn-primary" onclick="getAllPuzzles();">Reset</button>
	</div>

	<div id="root" class="container">
		<!--Sudoku puzzle is generated here via javascript-->
	</div>
</div>
